mixin redes
    a(href="#")
        img(src="./assets/image/s-icons/facebook.png", alt="")
    a(href="#")
        img(src="./assets/image/s-icons/twitter.png", alt="")
    a(href="#")
        img(src="./assets/image/s-icons/g-plus.png", alt="")
mixin enlace(numero, nombre)
    +redes
    img(src="./assets/image/bullet.gif", alt="")
    img(src="./assets/image/ico_comment.png", alt="")
    a(href="#")= numero
    img(src="./assets/image/bullet.gif", alt="")
    a(href="#")= nombre
mixin emma
    p Hace 1 hora 12 mins
    a(href="#") Emma Watson protagonizará 'La bella y la bestia' | 
        a(href="#")
            strong VIDEO
    .row.last-news
        .col-md-4
            img(src="./assets/image/img_news.jpg", alt="")
        .col-md-8
            p La actriz Emma Watson fue confirmada por Disney como la protagonista de 'La bella y la bestia' con la versión de carne y hueso.
        div
            +enlace("10", "ESPECTÁCULOS")
            img(src="./assets/image/bullet.gif", alt="")
            a(href="#")
                i.fa.fa-youtube-play
    hr(width="100%")
