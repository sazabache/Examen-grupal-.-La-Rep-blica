mixin noticia(logo, imagen, texto, texto1, texto2, texto3, enlace)
    .box
        img.logo(src=logo, alt="")
        .row
            .col-md-5
                img.borde-gris(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto
        .row
            .col-md-5
                img(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto1
        .row
            .col-md-5
                img(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto2
        .row
            .col-md-5
                img(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto3
        p.text-center Más en
            a.color(href="#")= enlace
        hr(width=" 100px")
mixin blog(texto)
    .row
        .col-md-2
            img.pic-blog(src="./assets/image/img_blogueros.jpg", alt="")
        .col-md-10
            p.title Augusto Álvarez Rodrich
            p.blog-texto=texto
mixin columnista(image, nombre, texto)
    .text-center
        img.borde-white(src=image, alt="Mario-Vargas-Llosa")
        a(href="#")=nombre
        p 
            strong= texto
